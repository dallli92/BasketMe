<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SkillActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/beginnerballerbg"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="152dp"
            android:layout_height="60dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/imageView4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="I am a,"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="@android:color/background_light" android:fontFamily="@font/montserrat_subrayada"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageView4"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp">
        <ToggleButton
                android:text="Beginner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/beginnerBtn" android:layout_weight="1"
                android:background="@drawable/toggle_button" android:textColor="@android:color/background_light"
                android:fontFamily="@font/montserrat_subrayada" android:textOff="Beginner" android:textOn="Beginner"
                android:layout_marginRight="16dp" android:layout_marginEnd="16dp"/>
        <ToggleButton
                android:text="Baller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ballerBtn" android:layout_weight="1"
                android:background="@drawable/toggle_button" android:textColor="@android:color/background_light"
                android:fontFamily="@font/montserrat_subrayada" android:textOff="Baller" android:textOn="Baller"
                android:layout_marginRight="16dp" android:layout_marginEnd="16dp"/>
    </LinearLayout>
    <Button
            android:text="FINISH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/finishBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3" android:background="@drawable/get_started_button"
            android:textColor="@android:color/background_light" android:fontFamily="@font/montserrat_subrayada"/>
</android.support.constraint.ConstraintLayout>