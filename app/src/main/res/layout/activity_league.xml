<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LeagueActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/desiredleaguebg"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"
            android:contentDescription="@string/background_image" />


    <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/logo"
            android:scaleType="fitCenter" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/imageView2" android:contentDescription="TODO"/>
    <TextView
            android:text="Desired League"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:fontFamily="@font/montserrat_subrayada" android:textColor="@android:color/background_light"
            android:textSize="18sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/logo"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5">
        <ToggleButton
                android:text="men"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/menBtn" android:textOff="men"
                android:textOn="men" android:background="@drawable/toggle_button"
                android:textColor="@android:color/background_light" android:fontFamily="@font/montserrat_subrayada"
                android:onClick="onMenClick"/>
        <ToggleButton
                android:text="women"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/womenBtn" android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" android:textOff="women" android:textOn="women"
                android:background="@drawable/toggle_button" android:textColor="@android:color/background_light"
                android:fontFamily="@font/montserrat_subrayada" android:onClick="womenClicked"/>
        <ToggleButton
                android:text="co-ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/coedBtn" android:textOff="co-ed"
                android:textOn="co-ed" android:background="@drawable/toggle_button"
                android:textColor="@android:color/background_light" android:fontFamily="@font/montserrat_subrayada"
                android:onClick="ciedClicked"/>
    </LinearLayout>
    <Button
            android:text="NEXT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/leagueNextBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" android:background="@drawable/get_started_button"
            android:textColor="@android:color/background_light" android:fontFamily="@font/montserrat_subrayada"
            android:onClick="leagueNextClicked"/>
</android.support.constraint.ConstraintLayout>